[user]
	name = Lionel Martin
	email = lionel@stickyads.tv
    editor = vim
[core]
    autocrlf = input
    pager = /usr/bin/less
[merge]
    tool = lvimdiff
[mergetool "lvimdiff"]
    cmd = "vim -d -c 'wincmd J' $MERGED $LOCAL $BASE $REMOTE"
[diff]
    tool = vimdiff
[color]
    ui = auto
[alias]
    st = status
    df = diff
    co = checkout
    ci = commit
    br = branch
    uncommit = reset --soft HEAD^
	ctags = !.git/hooks/ctags
[push]
    default = matching
[credential]
    helper = cache
[include]
    path= ~/.gitconfig.local
[init]
	templatedir = ~/.git_template
